<Window x:Class="AnnotationGems.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:rendering="clr-namespace:AnnotationGems.Rendering"
        Title="AnnotationGems" Width="1200" Height="800" Background="Black">
    <DockPanel>
        <Menu DockPanel.Dock="Top">
            <MenuItem Header="_File">
                <MenuItem Header="_New Project..." Click="NewProject_Click"/>
                <MenuItem Header="_Open Project..." Click="OpenProject_Click"/>
                <Separator/>
                <MenuItem Header="_Save Project" Click="SaveProject_Click"/>
                <MenuItem Header="Export _Annotations..." Click="ExportAnnotations_Click"/>
            </MenuItem>
        </Menu>

        <Canvas x:Name="ViewerHost" ClipToBounds="True" Background="Black">
            <Image x:Name="ImageView"
           Stretch="None"
           SnapsToDevicePixels="True"
           RenderTransformOrigin="0,0"
           Canvas.Left="0"
           Canvas.Top="0"/>
            <rendering:AnnotationOverlay x:Name="Overlay"
                                 Canvas.Left="0"
                                 Canvas.Top="0"/>
        </Canvas>



    </DockPanel>

</Window>

